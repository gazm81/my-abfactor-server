root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_size = 2

[Dockerfile]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab