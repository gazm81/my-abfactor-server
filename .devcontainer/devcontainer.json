{
  "name": "Abiotic Factor Server",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/steamcmd",
  "forwardPorts": [7777, 27015],
  "portsAttributes": {
    "7777": {
      "label": "Game Port (UDP)"
    },
    "27015": {
      "label": "Query Port (UDP)"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "echo 'Dev container ready! Use: docker-compose up -d'",
  "remoteUser": "root"
}
